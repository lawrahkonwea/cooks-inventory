<p style="color: green"><%= notice %></p>

<section id="my-recipes">
  <h1 id="recipes-header">Recipes</h1>

  <div id="recipes">
    <% @recipes.each do |recipe| %>
      <%= render partial: 'recipe1', locals: { recipe: recipe } %>
    <% end %>
  </div>

  <%= link_to "New recipe", new_recipe_path, class: "new-recipe" %>
</section>