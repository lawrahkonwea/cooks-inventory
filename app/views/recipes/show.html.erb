<!DOCTYPE html>
<html>
  <head>
    <title>Public Recipes</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

<p style="color: green"><%= notice %></p>

<%= render @recipe %>
  <div class="recipe-buttons">
    <% if user_signed_in? %>
      <button type="" class="open-button">Generate Shopping List</button>
    <% end %>

    <% if @recipe.user == @current_user %>
      <%= link_to "Add Ingredients", new_recipe_recipe_food_path(@recipe.id), class: ""%>
    <% end %>
  </div>
 <table class="recipe-table">
    <thead class="">
      <tr class="">
        <th class="">Food</th>
        <th class="">Quantity</th>
        <th class="">Value</th>
        <% if @recipe.user == current_user %>
          <th class="">Action</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @recipe_foods.each do |recipe_food| %>
  <%= render partial: "recipe_food", locals: { recipe_food: recipe_food } %>
<% end %>
    </tbody>
  </table>
<div>
  <%= link_to "Edit this recipe", edit_recipe_path(@recipe) %> |
  <%= link_to "Back to recipes", recipes_path %>

  <% if @recipe.user == current_user %>
  <%= link_to 'Remove', (@recipe), data: { turbo_method: 'delete'}, class: "btn btn-outline-danger btn-sm" %>
  <% end %>
</div>
<%
=begin%>
 
  <% if user_signed_in? %>
    <div class="modal" id="modal">
 <%= form_with url: shopping_list_path, method: :get, local: true, html: { "data-turbo": "false", class: "modal-form" } do |form| %>
    <div class="form-containers shopping-list">
      <h1 class="form-header">Generating Shopping List</h1>
      <div class="form-group">
        <h3>Choose an inventory to use</h3>
        <%= form.text_field :recipe_id, value: @recipe.id, class: "form-input", type: "hidden" %>
      </div>
      <div class="form-group">
        <%= form.select :inventory_id, options_from_collection_for_select(@inventories, "id", "name"), { prompt: "Select inventory" }, { class: "form-input" } %>
      </div>
      <%= form.submit "Submit", class: "form-submit" %>
    </div>
  <% end %>
</div>
  <% end %>
</div> 
<%
=end%>
<script>
  const test = document.querySelector(".open-button")
const modal = document.querySelector(".modal")
document.addEventListener("DOMContentLoaded", () => {
    test.addEventListener("click", (e) => {
      e.preventDefault()
      console.log("name")
      if (modal.classList.contains("modal")) {
        modal.classList.remove("modal")
      } else {
        modal.classList.add("modal")
      }
    })
  })

</script>
  </body>
</html>
