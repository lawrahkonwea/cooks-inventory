<p style="color: green"><%= notice %></p>

<%= render @recipe %>
  <div class="recipe-buttons">
    <% if user_signed_in? %>
      <button type="" class="open-button">Generate Shopping List</button>
    <% end %>

    <% if @recipe.user == @current_user %>
      <%= link_to "Add Ingredients", new_recipe_recipe_food_path(@recipe.id), class: ""%>
    <% end %>
  </div>
 <table class="recipe-table">
    <thead class="">
      <tr class="">
        <th class="">Food</th>
        <th class="">Quantity</th>
        <th class="">Value</th>
        <% if @recipe.user == current_user %>
          <th class="">Action</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "recipe_food", collection: @recipe_foods %>
    </tbody>
  </table>
<div>
  <%= link_to "Edit this recipe", edit_recipe_path(@recipe) %> |
  <%= link_to "Back to recipes", recipes_path %>

  <% if @recipe.user == current_user %>
  <%= link_to 'Remove', (@recipe), data: { turbo_method: 'delete'}, class: "btn btn-outline-danger btn-sm" %>
  <% end %>
</div>
