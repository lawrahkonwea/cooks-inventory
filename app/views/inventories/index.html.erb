<h1 class="page-title">My Inventories</h1>

<div class="inventories-container">
  <%= link_to "New Inventory", new_inventory_path, class: "add-inventory-link" %>

  <div class="inventories-list">
    <% @inventories.each do |inventory| %>
      <%= render inventory %>

      <div class="inventory-actions">
        <%= link_to "Show this inventory", inventory, class: "inventory-action-link" %>
        <%= button_to "Remove", inventory, method: :delete, data: { confirm: "Are you sure?" }, class: "inventory-action-button" %>
      </div>
    <% end %>
  </div>
</div>